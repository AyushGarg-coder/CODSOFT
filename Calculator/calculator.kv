<Button>:
    font_size:32

<calculator>:
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height

        TextInput:
            id:text_number
            text:"0"
            halign:"right"
            size_hint:(1,0.2)
            font_size:32
            color:[203,209,204]

        GridLayout:
            cols:4
            rows:5

            Button:
                text:"AC"
                on_press:root.clear()
            Button:
                text:"%"
                on_press:root.maths("%")
            Button:
                text:"DEL"
                on_press:root.remove()
            Button:
                text:"/"
                on_press:root.maths("/")
                
            Button:
                text:"7"
                on_press:root.number(7)
            Button:
                text:"8"
                on_press:root.number(8)
            Button:
                text:"9"
                on_press:root.number(9)
            Button:
                text:"*"
                on_press:root.maths("*")

            Button:
                text:"4"
                on_press:root.number(4)
            Button:
                text:"5"
                on_press:root.number(5)
            Button:
                text:"6"
                on_press:root.number(6)
            Button:
                text:"-"
                on_press:root.maths("-")

            Button:
                text:"1"
                on_press:root.number(1)
            Button:
                text:"2"
                on_press:root.number(2)
            Button:
                text:"3"
                on_press:root.number(3)
            Button:
                text:"+"
                on_press:root.maths("+")

            Button:
                text:"+/-"
                on_press:root.minus_plus()
            Button:
                text:"0"
                on_press:root.number(0)
            Button:
                text:"."
                on_press:root.dot()
            Button:
                text:"="
                on_press:root.evaluate()